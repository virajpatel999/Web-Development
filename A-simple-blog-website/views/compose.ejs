<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label for="exampleFormControlInput1">Title</label>
        <input type="text" class="form-control" name="postTitle" id="exampleFormControlInput1">
      </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Post</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" name="postBody" rows="3"></textarea>
      </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>
